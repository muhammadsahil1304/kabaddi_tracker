                    android:layout_marginStart="430dp"
                    android:src="@drawable/kebab"
                    app:tint="@color/white"
                    ></ImageView>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rvcj_post"
                android:scaleType="fitXY"></ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/like"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insta_heart"
                    app:tint="@color/white"
                    android:padding="4dp"
                    ></ImageView>
                <ImageView
                    android:id="@+id/comment"
                    android:layout_toRightOf="@id/like"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insta_comment"
                    app:tint="@color/white"
                    ></ImageView>
                <ImageView
                    android:id="@+id/share"
                    android:layout_toRightOf="@id/comment"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insta_share"
                    app:tint="@color/white"
                    ></ImageView>
                <ImageView
                    android:id="@+id/save"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="200dp"
                    android:src="@drawable/insta_save"
