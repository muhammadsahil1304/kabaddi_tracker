                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="430dp"
                    android:src="@drawable/kebab"
                    app:tint="@color/white"
                    ></ImageView>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rvcj_post"
                android:scaleType="fitXY"></ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/like1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insta_heart"
                    app:tint="@color/white"
                    android:padding="4dp"
                    ></ImageView>
                <ImageView
                    android:id="@+id/comment1"
                    android:layout_toRightOf="@id/like1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insta_comment"
                    app:tint="@color/white"
                    ></ImageView>
                <ImageView
                    android:id="@+id/share1"
                    android:layout_toRightOf="@id/comment1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insta_share"
                    app:tint="@color/white"
                    ></ImageView>
                <ImageView
                    android:id="@+id/save1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="200dp"
                    android:src="@drawable/insta_save"
                    app:tint="@color/white"
                    ></ImageView>
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="56k likes        rvcjinsta GTA6 View all 427 comnt  "
                    android:layout_below="@id/like1"
                    android:paddingStart="15dp"
                    android:textSize="30dp"
                    android:textColor="@color/white"></TextView>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/insta_home"
                    app:tint="@color/black"
                    android:background="@color/white"></ImageButton>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/insta_search"
                    app:tint="@color/white"
                    android:padding="20dp"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/insta_add"
                    app:tint="@color/white"
                    android:padding="19dp"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/insta_reel"
                    app:tint="@color/white"
                    android:padding="22dp"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="95dp"
                    android:src="@drawable/my_dp"
                    android:background="@drawable/story_background"
                    android:padding="16dp"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/insta_home"
                    app:tint="@color/white"
                    ></ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>