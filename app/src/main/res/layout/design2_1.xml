<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_background"
        android:scaleType="centerCrop"

        ></ImageView>
    <TextView
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Sign in to Your Account"
        android:textSize="23dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"></TextView>
    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="90dp"
        android:layout_width="380dp"
        android:layout_height="290dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"></ImageView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/usernameid"
        android:layout_width="370dp"
        android:layout_below="@+id/logo"
        android:layout_height="80dp"
        android:hint="USERNAME"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:paddingStart="135dp"
        android:textColorHint="@color/white"
        android:background="@drawable/custom_editbox"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        ></androidx.appcompat.widget.AppCompatEditText>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/passwordid"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usernameid"
        android:hint="PASSWORD"
        android:paddingStart="135dp"
        android:textColorHint="@color/white"
        android:background="@drawable/custom_editbox"
        android:inputType="numberPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        ></androidx.appcompat.widget.AppCompatEditText>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_below="@+id/passwordid"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button2"
        android:text="LOG IN"
        android:textSize="23dp"
        android:textColor="@color/lightblue"
        android:layout_marginTop="30dp"
        >
    </androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:id="@+id/last"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:text="Don't have account ?"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"></TextView>
    <TextView
        android:id="@+id/last2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="SIGN UP"
        android:layout_toRightOf="@+id/last"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="30dp"></TextView>



</RelativeLayout>